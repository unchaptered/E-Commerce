{
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": true,
    "bracketSpacing": true,
    "arrowPrens": "always",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "printWidth": 70,
                "useTabs": false,
                "trailingComma": "none",
                "arrowParens": "avoid",
                "proseWrap": "never"
            }
        },
        {
            "files": "*.{json,babelrc,eslintrc,remarkrc,prettierrc}",
            "options": {
                "useTabs": false
            }
        }
    ]
}